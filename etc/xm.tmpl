#
#  Configuration file for the Xen instance {$hostname}, created on
# { scalar localtime }.
#


#
#  Kernel + memory size
#
{ if ( $kernel )
  {
    $OUT.= "kernel = '$kernel'\n";
  }
}

{ if ( $initrd )
  {
    $OUT.= "ramdisk = '$initrd'\n";
  }
}
memory  = '{$memory}'


#
#  Disk device(s).
#
root    = '/dev/{$device}1 ro'

{ if ( $noswap ) 
  {
        $OUT .= "disk    = [ '$image_vbd,$device" . "1,w' ]";
  }
  else
  {
        $OUT .= "disk    = [ '$image_vbd,$device" . "1,w', '$swap_vbd,$device" . "2,w' ]";
  }
}

#
#  Hostname
#
name    = '{$hostname}'


#
#  Networking
#
{ if ( $dhcp )
  {
    $OUT .= "dhcp = 'dhcp'\n";

    # Setup the mac address, if present.
    my $m = '';
    if ( $mac )
    { 
      $m = "mac=$mac"
    }

    $OUT .= "vif  = [ '$m' ]";
  }    
  else
  {
    #
    # Setup the mac address, if present.
    #
    my $m = '';
    if ( $mac )
    { 
      $m = ",mac=$mac"
    }

    $OUT .= "vif  = [ 'ip=$ip1"; 
    $OUT .= "$m' ]";
  }
}

#
#  Behaviour
#
on_poweroff = 'destroy'
on_reboot   = 'restart'
on_crash    = 'restart'
